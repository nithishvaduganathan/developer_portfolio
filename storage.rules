rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Product images - read by all, write by authenticated users
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Logo and brand assets
    match /assets/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
